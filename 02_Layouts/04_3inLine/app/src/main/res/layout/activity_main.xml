<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.miguelcr.a04_3inline.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:text="Kółko i krzyżyk"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_box_empty"
        android:id="@+id/imageViewBox2"
        android:layout_alignTop="@+id/imageViewBox1"
        android:layout_toRightOf="@+id/imageViewBox1"
        android:layout_toEndOf="@+id/imageViewBox1"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:onClick="onBoxClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_box_empty"
        android:id="@+id/imageViewBox3"
        android:layout_alignTop="@+id/imageViewBox2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onBoxClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_box_empty"
        android:layout_marginTop="53dp"
        android:id="@+id/imageViewBox1"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onBoxClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_box_empty"
        android:id="@+id/imageViewBox4"
        android:layout_below="@+id/imageViewBox1"
        android:layout_alignLeft="@+id/imageViewBox1"
        android:layout_alignStart="@+id/imageViewBox1"
        android:layout_marginTop="14dp"
        android:onClick="onBoxClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_box_empty"
        android:id="@+id/imageViewBox5"
        android:layout_alignTop="@+id/imageViewBox4"
        android:layout_alignLeft="@+id/imageViewBox2"
        android:layout_alignStart="@+id/imageViewBox2"
        android:onClick="onBoxClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_box_empty"
        android:id="@+id/imageViewBox6"
        android:layout_alignTop="@+id/imageViewBox5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onBoxClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_box_empty"
        android:id="@+id/imageViewBox7"
        android:layout_below="@+id/imageViewBox4"
        android:layout_alignLeft="@+id/imageViewBox4"
        android:layout_alignStart="@+id/imageViewBox4"
        android:layout_marginTop="11dp"
        android:onClick="onBoxClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_box_empty"
        android:id="@+id/imageViewBox8"
        android:layout_alignTop="@+id/imageViewBox7"
        android:layout_alignLeft="@+id/imageViewBox5"
        android:layout_alignStart="@+id/imageViewBox5"
        android:onClick="onBoxClick"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_box_empty"
        android:id="@+id/imageViewBox9"
        android:layout_alignTop="@+id/imageViewBox8"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onBoxClick"/>

    <TextView
        android:id="@+id/player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPlayer1"
        android:text="Player 1"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/white"
        android:padding="10dp"/>


</RelativeLayout>
